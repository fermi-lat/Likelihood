Linux "-I ../src -g -O -pedantic -D TRAP_FPE -D USE_GOODI " \
#Linux "-I ../src -g -O -pedantic -D TRAP_FPE " \
WIN32 '/I..\src /D"USE_GOODI" /wd4290'

