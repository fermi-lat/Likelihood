private
macro_prepend includes "-I $(LIKELIHOODROOT)/src -I.." WIN32 "/I $(LIKELIHOODROOT)\src /I.. "
macro win_source "-s=../Likelihood *.h -s=../src *.h *.cxx "
macro lib_source "*.cxx " WIN32 $(win_source)
library LikelihoodLib -no_share *.c $(lib_source)
macro test_source "test/*.cxx " WIN32 "-s=../src/test *.h *.cxx "
application test_Likelihood $(test_source)
public

