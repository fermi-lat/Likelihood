package Likelihood
version v0r8

author James Chiang <jchiang@slac.stanford.edu>

# $Id: requirements,v 1.17 2003/06/04 16:24:16 jchiang Exp $

use astro  v*
use cfitsio v1* IExternal
use f2c v*
use CLHEP v2* IExternal
#use CCfits v1r12p4 IExternal
#use CALDBinterface v*

apply_pattern package_include

private

# allow use of internal path
macro_prepend cppflags "" Linux "-I ../src -g -pedantic " WIN32 "/I..\src "
macro_prepend cflags "" Linux "-g"

apply_pattern package_linkopts

# make sure test application gets built when library changes
macro test_Likelihoodstamps "Likelihood.stamp"

macro my_headers "" WIN32 "../Likelihood/*.h *.h"
#library Likelihood -no_share $(my_headers) *.cxx
library Likelihood -no_share $(my_headers) *.cxx *.f *.c

# test application
application test_Likelihood test/*.cxx
