# allow use of internal path
macro Likelihood_cppflags "" Linux "-I ../src -g -pedantic " WIN32 "/I..\src  /wd4290"
macro_prepend cflags "" Linux "-g"

# make sure test application gets built when library changes
macro test_Likelihoodstamps "Likelihood.stamp"

macro my_headers "" WIN32 "../Likelihood/*.h *.h"
library Likelihood -no_share $(my_headers) *.cxx *.f *.c $(pydir)/*.i

# test application
application test_Likelihood test/*.cxx
