$(pydir)$(package).cxx: $(pydir)$(package).i
	cd $(pydir); $(SWIG) -c -python -c++ -o $(package).cxx $(package).i

$(bin)$(package).o: $(pydir)$(package).cxx
	cd $(pydir); $(cppcomp) $(swig_nowarn) -o $(package).o $(pydir)$(package).cxx
	cd $(src); $(cppcomp) -c -o $(bin)$(package).o $(package).cxx

${CONSTITUENT} ::
	$(cpplink) -shared $(pydir)$(package).o $(use_linkopts) \
	   -L$(PYLIB) -lswigpy -o $(pydir)_$(package).so
